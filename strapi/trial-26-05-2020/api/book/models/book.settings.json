{
  "kind": "collectionType",
  "collectionName": "books",
  "info": {
    "name": "book"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "code": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "richtext"
    },
    "author": {
      "type": "string"
    },
    "price": {
      "type": "integer"
    },
    "status": {
      "type": "integer"
    },
    "images": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "category": {
      "model": "category",
      "via": "books"
    }
  }
}
